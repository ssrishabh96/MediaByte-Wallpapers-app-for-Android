<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
    android:id="@+id/pixabay_row_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/pixabay_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:minHeight="200dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pixabay_views"/>

            <TextView
                android:id="@+id/pixabay_Views"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/cardview_dark_background"
                android:text="112"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pixabay_likes"/>

            <TextView
                android:id="@+id/pixabay_Likes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                android:ellipsize="end"
                android:text="112"
                android:gravity="left|center"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pixabay_comment"/>

            <TextView
                android:id="@+id/pixabay_Comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="112"
                android:gravity="left|center"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pixabay_download"
                android:id="@+id/pixabay_Download"
                android:layout_weight="1" />
        </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
