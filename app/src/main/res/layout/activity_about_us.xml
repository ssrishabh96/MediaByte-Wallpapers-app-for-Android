<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="imageopen.rishabh.andimage.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cardw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:minHeight="50dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about"
                android:padding="10dp"
                android:typeface="monospace" />
        </android.support.v7.widget.CardView>


        <TextView
            android:text="Other Applications:"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_marginLeft="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="showSplits"
                        android:src="@mipmap/splits"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:onClick="showSplits"
                        android:text="Splits "
                        android:gravity="center" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/physics"
                        android:onClick="showPhysics"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:onClick="showPhysics"
                        android:text="Pocket Physics"
                        android:gravity="center" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="   Show Apps"
                    android:onClick="showAllApps"
                    android:textColor="#20afd3"
                    android:textColorHighlight="@color/colorAccent"
                    android:background="#f1f0f0"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_android_black_24dp"
                    android:padding="20dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:text="Connect with me:"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginBottom="10dp"
            android:background="#d6d7d7"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"

                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                >

                <ImageButton
                    android:layout_width="fill_parent"
                    android:src="@mipmap/linkedin"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:onClick="linkedin"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="fill_parent"
                    android:src="@mipmap/email"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:onClick="email"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="fill_parent"
                    android:src="@mipmap/twitter"
                    android:onClick="twitter"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="fill_parent"
                    android:src="@mipmap/browser"
                    android:scaleType="centerCrop"
                    android:onClick="googlelle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:text="You can change username in the Settings. Enjoy."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:drawableLeft="@drawable/ic_error_outline_black_24dp"
            android:layout_margin="6dp"
            android:gravity="fill_horizontal" />

    </LinearLayout>
</LinearLayout>
